package ${basePackage}.scaffolding;

public class Response {

    public enum CODE_INFO {
        OK(0, ""),
        SYSTEM_ERROR(-1, "系统错误");

        private int code;
        private String info;

        CODE_INFO(int code, String info) {
            this.code = code;
            this.info = info;
        }

        public int getCode() {
            return code;
        }

        public void setCode(int code) {
            this.code = code;
        }

        public String getInfo() {
            return info;
        }

        public void setInfo(String info) {
            this.info = info;
        }


        @Override
        public String toString() {
            return "{\"code\":" + code + ",\"info\":\"" + info +"\"}";
        }
    }

    private int code;
    private String info;
    private Object data;

    public Response(Object data) {
        this.code = CODE_INFO.OK.getCode();
        this.info = CODE_INFO.OK.getInfo();
        this.data = data;
    }

    public Response(CODE_INFO respCode, Object data) {
        this.code = respCode.getCode();
        this.info = respCode.getInfo();
        this.data = data;
    }

    public int getCode() {
        return code;
    }

    public void setCode(int code) {
        this.code = code;
    }

    public String getInfo() {
        return info;
    }

    public void setInfo(String info) {
        this.info = info;
    }

    public Object getData() {
        return data;
    }

    public void setData(Object data) {
        this.data = data;
    }

    @Override
    public String toString() {
        return JsonUtil.obj2Json(this);
    }
}
